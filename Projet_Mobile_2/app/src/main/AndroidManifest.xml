<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<!-- ┌────────────────────────────────────────────┐
     │          CAMERA PERMISSION                 │
     └────────────────────────────────────────────┘ -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/epsi_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projet_Mobile_2"
        tools:targetApi="31">

        <!-- ┌──────────────────────────────────────────────┐
             │          GOOGLE MAP API KEY                  │
             └──────────────────────────────────────────────┘ -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/gmap_api_key" />

        <!-- ┌──────────────────────────────────────────────┐
             │          PROFILE ACTIVITY                    │
             └──────────────────────────────────────────────┘ -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <!-- ┌─────────────────────────────────────────────────────┐
             │          MAGASIN DETAIL ACTIVITY                    │
             └─────────────────────────────────────────────────────┘ -->
        <activity
            android:name=".MagasinDetailActivity"
            android:exported="true" />

        <!-- ┌──────────────────────────────────────────────┐
             │          BARCODE ACTIVITY                    │
             └──────────────────────────────────────────────┘ -->
        <activity
            android:name=".BarcodeActivity"
            android:exported="true" />

        <!-- ┌─────────────────────────────────────────────┐
             │          QRSCAN ACTIVITY                    │
             └─────────────────────────────────────────────┘ -->
        <activity
            android:name=".QrScanActivity"
            android:exported="true" />

        <!-- ┌──────────────────────────────────────────────────┐
             │          INSCRIPTION ACTIVITY                    │
             └──────────────────────────────────────────────────┘ -->
        <activity
            android:name=".InscriptionActivity"
            android:exported="true" />

        <!-- ┌───────────────────────────────────────────┐
             │          MAIN ACTIVITY                    │
             └───────────────────────────────────────────┘ -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ┌─────────────────────────────────────────────┐
             │          SPLASH ACTIVITY                    │
             └─────────────────────────────────────────────┘ -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>